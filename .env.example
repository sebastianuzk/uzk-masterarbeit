# Ollama Konfiguration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# E-Mail Konfiguration (Gmail SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
DEFAULT_RECIPIENT=recipient@example.com
SENDER_NAME=University Chatbot

# Process Engine Konfiguration (Camunda Platform 8)
ENABLE_PROCESS_ENGINE=true
CAMUNDA_ZEEBE_ADDRESS=localhost:26500
CAMUNDA_OPERATE_URL=http://localhost:8081
CAMUNDA_TASKLIST_URL=http://localhost:8082
CAMUNDA_TENANT_ID=university